<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimarylight"
    tools:context="com.mractiveiddev.challengeintent.MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="@string/contacts_app"
        android:textSize="18sp" />


        <ImageView
            android:id="@+id/ivMood"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:srcCompat="@drawable/happy" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/ivPhone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="40"
            android:clickable="true"
            app:srcCompat="@drawable/phone" />

        <ImageView
            android:id="@+id/ivLocation"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="40"
            android:clickable="true"
            app:srcCompat="@drawable/location" />

        <ImageView
            android:id="@+id/ivWebsite"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="40"
            android:clickable="true"
            app:srcCompat="@drawable/website" />

    </LinearLayout>

    <Button
        android:id="@+id/btnCreat"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="Creat new contact"
        android:textColor="#FFFFFF"/>

</LinearLayout>
